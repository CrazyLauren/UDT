namespace {{ common.get_namespace(name) }}
{
template <typename T>
inline void fill_header(T* aTo)
{
    {% for field in header.___fields %}
        {%  if  field.LogicalType|string() != "none" %}
                {% if field.LogicalType|string() == "number" and '___number' in msg %}
    _header.{{ field.id }} = {{ struct_name }}::NUMBER;
                {% elif field.LogicalType|string() == "size" and '___size' in msg %}
    _header.{{ field.id }} = get_full_size<{{ struct_name }}>(aObject);
                {% elif field.LogicalType|string() in ["unique", "version_major", "version_minor"]
                    and field.id in msg %}
    _header.{{ field.id }} = {{ struct_name }}::{{ field.id | upper }};
                {% endif %}
        {% endif %}
    {% endfor %}

    {% if field_crc%}
    set_crc<T>(aTo);
    {% endif %}
}
}
